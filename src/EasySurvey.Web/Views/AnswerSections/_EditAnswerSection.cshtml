<div class="panel panel-primary">
    <div class="panel-heading">@Html.DisplayFor(model => model.Title) - @Html.DisplayFor(model => model.Description)</div>
    <div class="panel-body">
        <br />
        @foreach (var answer in Model.Answer.OrderBy(item => item.SortOrder))
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @{
                            await Html.RenderPartialAsync("~/views/Answers/_EditAnswer.cshtml", answer, ViewData);
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>


