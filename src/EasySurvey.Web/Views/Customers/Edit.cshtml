@using EasySurvey.Web.ViewModels.Customers
@model EasySurvey.Web.ViewModels.Customers.EditCustomerViewModel

@{
    ViewData["Title"] = "Test";
}



<h2>Customer</h2>

<form asp-action="Customer">
    <h4>Create/Edit Customer Info</h4>
    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>

    <div class="panel panel-primary">
        <div class="panel-heading">Customer Info</div>
        <div class="panel-body">
            <br />
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Telephone" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Telephone" class="form-control" />
                    <span asp-validation-for="Telephone" class="text-danger" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="HomePage" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="HomePage" class="form-control" />
                    <span asp-validation-for="HomePage" class="text-danger" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Subsidiaries" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Subsidiaries" class="form-control" />
                    <span asp-validation-for="Subsidiaries" class="text-danger" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="IndustrialClassification" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="IndustrialClassification" class="form-control" />
                    <span asp-validation-for="IndustrialClassification" class="text-danger" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CVR" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CVR" class="form-control" />
                    <span asp-validation-for="CVR" class="text-danger" />
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="panel panel-primary">
        <div class="panel-heading">Forsikringsansvarlig</div>
        <div class="panel-body">
            <br />
            <div class="form-group row">
                <label asp-for="Responsible" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Responsible" class="form-control" />
                    <span asp-validation-for="Responsible" class="text-danger" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ResponsibleEmail" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ResponsibleEmail" class="form-control" />
                    <span asp-validation-for="ResponsibleEmail" class="text-danger" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ResponsibleTelephone" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ResponsibleTelephone" class="form-control" />
                    <span asp-validation-for="ResponsibleTelephone" class="text-danger" />
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">PBS Info</div>
        <div class="panel-body">
            <br />
            <div class="form-group row">
                <label class="col-sm-2" asp-for="IsPBSPayment"></label>
                <div class="col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input id="chkIsPBSPayment" asp-for="IsPBSPayment" />
                        </label>
                    </div>
                </div>
            </div>

            <div id="dvPBSInfo" style="display: none">
                <div class="form-group row">
                    <label asp-for="RegistrationNumber" class="col-sm-2 form-control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="RegistrationNumber" class="form-control" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="AccountNumber" class="col-sm-2 form-control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="AccountNumber" class="form-control" />
                        <span asp-validation-for="AccountNumber" class="text-danger" />
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">Agreement Details</div>
        <div class="panel-body">
            <br />
            <div class="form-group row">
                <label asp-for="MultiannualAgreement" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-8">
                    <div class="radio-inline">
                        <label>
                            <input type="radio" asp-for="MultiannualAgreement" value="1" checked>1
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" asp-for="MultiannualAgreement" value="3">3
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" asp-for="MultiannualAgreement" value="5">5
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Forwards" class="col-sm-2 form-control-label"></label>
                <div class="col-sm-8">
                    <div class="radio-inline">
                        <label>
                            <input type="radio" asp-for="Forwards" value="1" checked>1
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" asp-for="Forwards" value="3">2
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" asp-for="Forwards" value="5">4
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" asp-for="Forwards" value="5">12
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading"><label asp-for="Activities"></label></div>
        <div class="panel-body">

            <div class="form-group row">
                <div class="col-lg-12">
                    <textarea rows="10" asp-for="Activities" class="form-control input-lg col-xs-12" style="min-width: 100%"></textarea>
                    <span asp-validation-for="Activities" class="text-danger" />
                </div>
            </div>
        </div>
    </div>

    @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">

            </div>
        </div>*@

    <div>
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
    <br />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#chkIsPBSPayment").click(function () {
                if ($(this).is(":checked")) {
                    $("#dvPBSInfo").show();
                } else {
                    $("#dvPBSInfo").hide();
                }
            });
        });
    </script>
}