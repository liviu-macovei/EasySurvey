@using EasySurvey.Web.ViewModels.Customers
@model IEnumerable<EasySurvey.Web.ViewModels.Customers.ListCustomerViewModel>

@{
    ViewData["Title"] = "Customer List";
}

<h3>Customers</h3>
<br />

<p>
    <a asp-action="Create" class="btn pull-right"><span class="glyphicon glyphicon-plus"></span> &nbsp; Create</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CVR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Responsible)
            </th>
            <th style="width: 7%;"></th>
            <th style="width: 7%;"></th>
            <th style="width: 7%;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CVR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsible)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-open"></span></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
