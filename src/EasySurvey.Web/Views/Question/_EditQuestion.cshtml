@model EasySurvey.Common.Models.Question

<tr>
    <th scope="row">@Html.LabelFor(model => model.QuestionText, Model.QuestionText, new { Class = "col-lg-12 form-control-label", title = Model.HelpText })    </th>
    <td>
        @if (Model != null && Model.QuestionTypeId == 1)
        {
            <input type="text" class="form-control" id="exampleInputName2" placeholder="@Model.DefaultComments">
        }
        else if (Model != null && (Model.QuestionTypeId == 2 || Model.QuestionTypeId == 6 || Model.QuestionTypeId == 4 || Model.QuestionTypeId == 5))
        {
            @foreach (var option in Model.OptionGroup.Option.OrderBy(item => item.Name))
            {
                <div class="radio-inline">
                    <label>
                        <input type="radio" value="@option.Id"> @option.Name
                    </label>
                </div>
            }
        }
        else /*if (Model != null && Model.QuestionTypeId == 3)*/
        {
            @foreach (var option in Model.OptionGroup.Option.OrderBy(item => item.Name))
                {
                <div class="radio-inline">
                    <label>
                        <input type="checkbox" value="@option.Id"> @option.Name
                    </label>
                </div>
            }
        }
    </td>
    <td>
        @if (Model != null && Model.QuestionTypeId == 1)
        {
            <input type="text" class="form-control" id="exampleInputName2" style="min-width: 100%"  placeholder="@Model.DefaultComments" />
        }
        else if (Model != null && Model.QuestionTypeId == 2)
        {
            <input type="text" class="form-control" id="exampleInputName2" style="min-width: 100%"  placeholder="@Model.DefaultComments" />
        }
        else if (Model != null && Model.QuestionTypeId == 3)
        {
            <input type="text" class="form-control" id="exampleInputName2" style="min-width: 100%"  placeholder="@Model.DefaultComments" />
        }
        else if (Model != null && Model.QuestionTypeId == 4)
        {
            <textarea rows="4" class="form-control input-lg col-xs-12" style="min-width: 100%" placeholder="@Model.DefaultComments"></textarea>
        }
        else if (Model != null && Model.QuestionTypeId == 5)
        {
            <input type="number" class="form-control" id="exampleInputName2" min="0" style="min-width: 100%" placeholder="@Model.DefaultComments" />
        }
        else if (Model != null && Model.QuestionTypeId == 6)
        {
            @*<input type="text" class="form-control" id="exampleInputName2" placeholder="@Model.DefaultComments" />*@
            @Model.DefaultComments
        }


    </td>
</tr>


